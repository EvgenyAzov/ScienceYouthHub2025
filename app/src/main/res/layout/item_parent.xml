<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:padding="12dp">

    <TextView android:id="@+id/parentNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имя" android:textStyle="bold"/>

    <TextView android:id="@+id/parentEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"/>

    <TextView android:id="@+id/parentAgeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Возраст"/>

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <Button
            android:id="@+id/addParentBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавить"/>
        <Button
            android:id="@+id/removeParentBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Удалить"
            android:layout_marginStart="12dp"/>
    </LinearLayout>
</LinearLayout>
