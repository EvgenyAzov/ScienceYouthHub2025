<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/feedbackUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пользователь"
        android:textStyle="bold"/>
    <RatingBar
        android:id="@+id/feedbackRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:isIndicator="true"/>
    <TextView
        android:id="@+id/feedbackComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Комментарий"/>
    <TextView
        android:id="@+id/feedbackDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/feedbackPhotosRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"/>
    <Button
        android:id="@+id/deleteFeedbackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Удалить отзыв"
        android:visibility="gone"/>
</LinearLayout>
